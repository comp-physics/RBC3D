PETSC_ARCH = linux-gnu-c-debug
include $(PETSC_DIR)/conf/variables
#include ${PETSC_DIR}/conf/rules
MKL_DIR = /home/bryngel2/intel/mkl/10.0.1.014/lib/em64t
